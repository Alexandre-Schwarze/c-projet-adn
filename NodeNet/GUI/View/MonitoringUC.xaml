<UserControl x:Class="NodeNet.GUI.View.MonitoringUC"
             xmlns:intr="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:vm="clr-namespace:NodeNet.GUI.ViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sharecontrols="NodeNet.GUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="550">
    <UserControl.DataContext>
        <vm:VMMonitoringUC/>
    </UserControl.DataContext>
    <intr:Interaction.Triggers>
        <intr:EventTrigger EventName="Loaded">
            <intr:InvokeCommandAction Command="{Binding WindowLoaded}" />
        </intr:EventTrigger>
    </intr:Interaction.Triggers>
    <Grid >
        <Label Content="Monitoring" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
        <ListView x:Name="NodeList" HorizontalAlignment="Center" Height="360" Margin="10,76,0,0" VerticalAlignment="Top" Width="516" HorizontalContentAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Liste des noeuds connectés" HorizontalAlignment="Center" Margin="-5,45,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
